---
import Layout from "../layouts/Layout.astro";
import "@fontsource-variable/plus-jakarta-sans";
import "@fontsource/bowlby-one-sc";

const label = "SAMURAI";
---

<Layout title="Samurai 3D Slider">
  <div class="banner">
    <div class="slider" style="--quantity:10;">
      <div class="item" style="--position: 1">
        <img src="/images/Samurai_1.jpg" alt="" />
      </div>
      <div class="item" style="--position: 2">
        <img src="/images/Samurai_2.jpg" alt="" />
      </div>
      <div class="item" style="--position: 3">
        <img src="/images/Samurai_3.jpg" alt="" />
      </div>
      <div class="item" style="--position: 4">
        <img src="/images/Samurai_4.jpg" alt="" />
      </div>
      <div class="item" style="--position: 5">
        <img src="/images/Samurai_5.jpg" alt="" />
      </div>
      <div class="item" style="--position: 6">
        <img src="/images/Samurai_6.jpg" alt="" />
      </div>
      <div class="item" style="--position: 7">
        <img src="/images/Samurai_7.jpg" alt="" />
      </div>
      <div class="item" style="--position: 8">
        <img src="/images/Samurai_8.jpg" alt="" />
      </div>
      <div class="item" style="--position: 9">
        <img src="/images/Samurai_9.jpg" alt="" />
      </div>
      <div class="item" style="--position: 10">
        <img src="/images/Samurai_10.jpg" alt="" />
      </div>
    </div>
    <div class="content">
      <h1 data-content={label}>{label}</h1>
      <div class="author">
        <h2>AZ JAVI</h2>
      </div>
      <div class="model"></div>
    </div>
  </div>
</Layout>

<style>
  .banner {
    width: 100%;
    height: 100vh;
    text-align: center;
    overflow: hidden;
    position: relative;
    background-color: #988a77;
  }
  .banner .slider {
    position: absolute;
    width: 200px;
    height: 250px;
    top: 10%;
    left: calc(50% - 100px);
    transform-style: preserve-3d;
    transform: perspective(1000px);
    animation: autoRun 30s linear infinite;
    z-index: 2;
  }

  @keyframes autoRun {
    from {
      transform: perspective(1000px) rotateX(-16deg) rotateY(0deg);
    }
    to {
      transform: perspective(1000px) rotateX(-16deg) rotateY(-360deg);
    }
  }

  .banner .slider .item {
    position: absolute;
    inset: 0 0 0 0;
    transform: rotateY(calc((var(--position) - 1) * (360deg / var(--quantity))))
      translateZ(550px);
  }

  .banner .slider .item img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    border-radius: 0.375rem;
  }

  .banner .content {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: min(1400px, 100vw);
    height: max-content;
    padding-bottom: 100px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
  }

  .banner .content h1 {
    font-family: "Bowlby One SC", system-ui;
    font-size: 9em;
    line-height: 0.4em;
    position: relative;
    color: #4f453f;

    @media (400px <= width <= 800px) {
      font-size: 6em;
    }
  }

  .banner .content h1::after {
    position: absolute;
    inset: 0 0 0 0;
    content: attr(data-content);
    z-index: 2;
    -webkit-text-stroke: 0.1px #988a77;
    color: transparent;
  }

  .banner .content .author {
    font-family: "Plus Jakarta Sans Variable", sans-serif;
    text-align: right;
    max-width: 200px;
    z-index: 4;
  }
  .banner .content h2 {
    font-size: 3em;
  }
  .banner .content .model {
    background-image: url("images/model.png");
    width: 100%;
    height: 77vh;
    position: absolute;
    bottom: 0;
    left: 0;
    background-size: auto 140%;
    background-repeat: no-repeat;
    background-position: top center;
    z-index: 1;
  }
</style>
